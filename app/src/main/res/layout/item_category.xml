<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ItemCategoryImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/template_image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="35dp" />

    <TextView
        android:id="@+id/ItemCategoryCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_activities_counter_background"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:text="2"
        android:textColor="@color/textBlack"
        android:textSize="26sp"
        android:translationY="-5dp"
        app:layout_constraintBottom_toBottomOf="@+id/ItemCategoryImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ItemCategoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/textBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ItemCategoryImage" />

</androidx.constraintlayout.widget.ConstraintLayout>